<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NotesFree" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="iconTint">@color/black</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/light_status_bar_color</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.NotesFree" parent="Base.Theme.NotesFree" />

    <style name="textViewStyle">
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textViewTimestamp">
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_50</item>
    </style>

    <style name="textViewStyleTitle">
        <item name="android:fontFamily">@font/poppinsbold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="cardColor">
        <item name="android:background">@color/white_50</item>
    </style>
</resources>