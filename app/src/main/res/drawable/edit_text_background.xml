<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/light_blue"
                android:angle="45" />
            <corners android:radius="20dp" />
            <stroke
                android:width="2dp"/>
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white_50" />
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="@color/dark_grey" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
</selector>